<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@drawable/fundo"
    tools:context="br.dantas.joice.adventuretin.menuPrincipal"
    android:foregroundGravity="clip_horizontal|clip_vertical"
    android:backgroundTintMode="multiply">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

    <ImageView
        android:layout_width="520dp"
        android:layout_height="260dp"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/janela1"
        android:layout_marginRight="200dp"
        android:paddingTop="40dp" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:id="@+id/imageView4"
        android:layout_gravity="left|top"
        android:src="@drawable/vol"
        android:layout_marginLeft="529dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="82dp"
        android:layout_height="50dp"
        android:id="@+id/imageView5"
        android:layout_gravity="left|top"
        android:src="@drawable/backverde"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="515dp"
        android:layout_height="260dp"
        android:id="@+id/Window1"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/janela2"
        android:layout_marginTop="20dp"
        android:paddingTop="40dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="520dp"
        android:layout_height="260dp"
        android:id="@+id/Janela3"
        android:layout_gravity="center"
        android:src="@drawable/janela3"
        android:paddingTop="40dp"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="65dp"
        android:id="@+id/World1"
        android:layout_gravity="left|bottom|center"
        android:src="@drawable/botaojanela1"
        android:layout_marginLeft="35dp" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="65dp"
        android:id="@+id/World2"
        android:layout_gravity="bottom|center"
        android:src="@drawable/botaojanela2"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="65dp"
        android:id="@+id/imageView3"
        android:layout_gravity="right|bottom"
        android:src="@drawable/botaojanela3"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp" />
</FrameLayout>


